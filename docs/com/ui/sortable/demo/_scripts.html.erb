<% content_for :modules, javascript_include_tag("/builds/ui/right-sortable.js") %>
<% content_for :modules, stylesheet_link_tag('sortable-demo')                   %>
<style type="text/css">
  ul.sortable {
    width: 20em;
    list-style: none;
    padding: 0;
    display: inline-block;
   *display: inline;
   *zoom: 1;
    margin-right: 1em;
    vertical-align: top;
  }
  ul.sortable li {
    cursor: move;
    background: #CFCEBD;
    padding: .2em .4em;
    margin: 2px;
    -webkit-border-radius: .24em;
    -moz-border-radius: .24em;
  }
  ul.sortable li.dragging {
    opacity: 0.6;
  }
  ul.horizontal {
    width: 30em;
    height: 1em;
  }
  ul.horizontal li {
    float: left;
  }

  ul#custom li.nothing {
    background: #843412;
    display: block;
    padding: 0;
    height: 3px;
    cursor: default;
  }
  ul#custom li.item {
    cursor: default;
    position: relative;
  }
  ul#custom li.item div.handle {
    position: absolute;
    right: .35em;
    top: -0.12em;
    font-size: 150%;
    font-weight: bold;
    cursor: move;
  }
</style>
